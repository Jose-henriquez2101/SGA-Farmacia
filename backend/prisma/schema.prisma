generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String     
  rut       String    
  role      Role
  status    Status 
  
}


enum Role {
  ADMIN_GENERAL
  CAJERO
  VENDEDOR
  ADMIN_INVENTARIO
}

enum Status {
  DESACTIVADO
  ACTIVADO
}

model Cliente {
  id        Int    @id @default(autoincrement())
  nombre    String
  rut       String @unique
  direccion String
  telefono  String
}

model Producto {
  codigo  Int @id
  nombre String
  descripcion String
  precio Int
  categoria String
  stock Int
  stockmin Int // Stock m√≠nimo para alertar
  
  // imagen String (Por ver)
  fechaCreacion DateTime @default(now())
}