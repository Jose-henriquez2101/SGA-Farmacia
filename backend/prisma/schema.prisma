model User {
  id    Int    @id @default(autoincrement())
  name  String
  email String @unique
}

model Cliente {
  id        Int    @id @default(autoincrement())
  nombre    String
  rut       String @unique
  direccion String
  telefono  String
}

model Producto {
  codigo      Int    @id
  nombre      String
  descripcion String
  precio      Int
  categoria   String
  stock       Int
  stockmin    Int // Stock m√≠nimo para alertar

  // imagen String (Por ver)
  fechaCreacion DateTime     @default(now())
  Inventario    Inventario[]
}

model Inventario {
  id         Int      @id @default(autoincrement())
  productoId Int
  cantidad   Int
  ubicacion  String?
  fecha      DateTime @default(now())

  producto Producto @relation(fields: [productoId], references: [codigo])
}
